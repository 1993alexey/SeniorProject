{
    "manifest_version": 2,
    "name": "Teacher Rating",
    "short_name": "BYUI RMP",
    "version": "0.0.1",
    "description": "View teacher ratings from the school's website",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "https://search-production.ratemyprofessors.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://my.byui.edu/ICS/Academics/Academic_Information.jnz?portlet=Registration&screen=Add+Drop+Courses+BYUI&screenType=next"
            ],
            "js": [
                "index.js"
            ],
            "css": [
                "main.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "fetcher.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
        "index.js",
        "byui_rmp.js",
        "professorData.js"
    ],
    "browser_action": {
        "default_icon": "icon128.png"
    }
}