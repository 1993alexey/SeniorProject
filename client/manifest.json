{
    "manifest_version": 2,
    "name": "BYUI Rate My Professor",
    "short_name": "BYUI RMP",
    "version": "0.0.1",
    "description": "View teacher ratings from the school's website",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.instructure.com/courses/*/quizzes/*/take*"
            ],
            "js": [
                "index.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "index.js",
        "byui_rmp.js"
    ],
    "browser_action": {
        "default_icon": "icon128.png"
    }
}